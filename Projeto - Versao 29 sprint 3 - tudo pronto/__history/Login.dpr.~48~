program Login;

uses
  Vcl.Forms,
  System.UITypes,
  Login_user in 'Login_user.pas' {Form2},
  Conexao in 'Conexao.pas' {DataModule1: TDataModule},
  MenusSistema in 'MenusSistema.pas' {Form1},
  Cadastro_User in 'Cadastro_User.pas' {FrmCadastro_Usuario},
  Consulta_User in 'Consulta_User.pas' {FrmConsulta_User},
  Vcl.Themes,
  Vcl.Styles,
  CadastroAlimentos in 'CadastroAlimentos.pas' {Cadastro_Alimentos},
  Cadastro_Receitas in 'Cadastro_Receitas.pas' {Cadastro_Receita},
  Cadastro_Exercicio in 'Cadastro_Exercicio.pas' {Cad_Exercicio},
  Refeicao_Cadastro in 'Refeicao_Cadastro.pas' {Refecicao_Cadastro},
  Dia_Semana in 'Dia_Semana.pas' {Dias_Semana},
  Cadastro_treino in 'Cadastro_treino.pas' {DMCadastro_Treino};

{$R *.res}

begin
  Application.Initialize;
  Application.MainFormOnTaskbar := True;

  Application.Title := '';
  Application.CreateForm(TDataModule1, DataModule1);
  // cria conexão

  Form2 := TForm2.Create(nil); // cria login
  try
    if Form2.ShowModal = mrOk then
    begin
      Application.CreateForm(TForm1, Form1); // cria menu
      Application.Run;
    end
    else
      Application.Terminate;
  finally
    Form2.Free;
  end;
end.

